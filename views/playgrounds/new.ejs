<% include ../partials/header %>
<div class="container">
    <div class="row">
            <h1 style="text-align: center;">Create A New Playground</h1>
            <div style="width: 30%; margin:25px auto;">
                    <form action="/playgrounds" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="name">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="image" placeholder="img-url">
                        </div>
                        <div>
                            <input class="form-control" type="text" name="description" placeholder="description">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-md btn-primary btn-block" style="margin-top: 15px;" >Submit</button>
                        </div>
                    </form>
                    <a href="/playgrounds">Back To PlayGrounds</a>
            </div>
    </div>
</div>

<% include ../partials/footer %>