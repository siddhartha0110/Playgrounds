<% include ../partials/header %>
<div class="container">
    <div class="row">
            <h1 style="text-align: center;">Add A New Comment to <%= game.name%></h1>
            <div style="width: 30%; margin:25px auto;">
                    <form action="/playgrounds/<%= game._id %>/comments" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[text]" placeholder="Add Comment">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="comment[author]" placeholder="author">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-md btn-primary btn-block">Submit</button>
                        </div>
                    </form>
                    <a href="/playgrounds">Back To PlayGrounds</a>
            </div>
            
    </div>
</div>

<% include ../partials/footer %>